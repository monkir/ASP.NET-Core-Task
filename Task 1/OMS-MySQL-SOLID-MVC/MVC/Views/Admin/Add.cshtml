@{
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Message"]
    </div>
}

@Html.ActionLink("Admin Index", "Index", "Admin", new{ area = ""}, new{ @class ="btn btn-danger"} )

<span>@Html.ValidationSummary()</span>
<form method="post" action="">
    <input type="text" class="form-control" value="@(Model != null ? Model.Name: "")" name="Name" placeholder="Enter name">
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <input type="text" class="form-control" value="@(Model != null ? Model.UserName: "")" name="UserName" placeholder="Choose username">
    <span class="text-danger">@Html.ValidationMessage("UserName")</span>
    <input type="text" class="form-control" value="@(Model != null ? Model.Password: "")" name="Password" placeholder="Choose password">
    <span class="text-danger">@Html.ValidationMessage("Password")</span>
    <input type="submit" class="form-control" value="Add" />
</form>